extends ../layout

block content
  .page-header
    h3 Client Submission form
    br
    p Note: You will not be able to edit this information once you hit Submit, so please double check all of the information entered.

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='organization') Organization
      .col-sm-8
        input.form-control(type='text', name='organization', id='organization', placeholder='Organization', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email') Email
      .col-sm-8
        input.form-control(type='text', name='email', id='email', placeholder='Email')
    .form-group
      label(class='col-sm-2 control-label', for='project') Project Title
      .col-sm-8
        input.form-control(type='text', name='project', id='project', placeholder='Project Title')
    .form-group
      label(class='col-sm-2 control-label', for='description') Project Description
      .col-sm-8
        textarea.form-control(name='description', id='description', placeholder='Please provide a comprehensive description of your project', rows='10')
    .form-group
      label(class='col-sm-2 control-label', for='presentation') Project Presentation / Website URL
      .col-sm-8
        input.form-control(type='text', name='presentation', id='presentation', placeholder='Please provide the full URL of your project presentation or website. Example: https://www.wikipedia.org/', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='term') What school term are you applying for?
      .col-sm-8
        select.form-control(name='term', id='term')
          - var d = new Date();
          - var y = d.getFullYear();
          - var nextyear = y + 1;
          - var m = d.getMonth();
          //- if we are still in January or February, let teachers sign up for Spring course
          - if (m < 2) {
            option= 'Spring ' + y
            option= 'Fall ' + nextyear
          - } else {
            option= 'Fall ' + y
            option= 'Spring ' + nextyear
          - }
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send
